<freeScreen>:
    orientation: 'vertical'
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'images/background.jpg'

    RelativeLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Button:
            size_hint_x: .1
            size_hint_y: .1
            pos_hint: {'left': 1, 'top': 1}
            text: "<-"
            font_size: sp(48)
            background_color: 0,0,0,0
            on_press:
                root.manager.current = 'main'
        Label:
            font_name: 'Tolkien.ttf'
            text: "You have been spared from the dark lord's blight"
            color: 0, 0, 0, 1
            font_size: sp(24)

