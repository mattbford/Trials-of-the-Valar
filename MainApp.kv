<mainScreen>:
    orientation: 'vertical'
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'images/background.jpg'

    GridLayout:
        cols: 1        
        padding: 20,0,0,0
        size: root.width, root.height
        Label:
            font_name: 'Tolkien.ttf'
            text: 'The Trials of the Valar'
            color: 0, 0, 0, 1
            font_size: sp(48)
        BoxLayout:
            padding: 20, 0
            height: "60dp"
            size_hint_y: None
            width: "200dp"
            TextInput:
                id: input
                size_hint_x: 15
                font_name: 'Tolkien.ttf'
                hint_text: 'Type a sentence, paragraph, or quote.....'
            Button:
                text: "Judgement"
                font_name: "Tolkien.ttf"
                size_hint_x: 5
                background_color: 0.8,1,1,.5
                on_press:
                    #root.manager.current = 'results'
                    #root.manager.get_screen('results').processResults(input.text)
                    app.processResults(input.text)
        Label:
            font_name: 'Tolkien.ttf'
            text: 'Plead your case before the west and see the reach of your corruption'
            color: 0, 0, 0, 1
            font_size: sp(24)
        GridLayout:
            cols: 3
            height: "10dp"
            BoxLayout:
                size_hint_x: .05
                Button:
                    background_color: 0, 0, 0, 0
                    text: "Mute"
                    font_name: "Tolkien.ttf"
                    size_hint_x:  "5dp"
                    on_press: app.toggleAudio(vol_slider)
            BoxLayout:
                size_hint_x: .2
                padding: 0,0,0,2
                Slider:
                    id: vol_slider
                    size_hint_x: "40dp"
                    cursor_size: 20,20
                    value: 25
                    step: 1
                    on_value: app.audioVolume(self.value)
                    orientation: 'horizontal'
            BoxLayout:
                size_hint_x: .75

